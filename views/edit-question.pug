include utils.pug

include navbar.pug

append head
    //- script(src="/javascripts/demo.js" type="module" async defer)
    link(rel="stylesheet" href="/stylesheets/reset.css")
    link(rel="stylesheet" href="/stylesheets/index.css")
    link(rel="stylesheet" href="/stylesheets/question-answer-forms.css")
    link(rel="stylesheet" href="/stylesheets/error.css")

block content  
  +validationErrorSummary(errors)
  div.center-column
    form.question-form(action=`/questions/${question.id}/edit` method='post')
      input(type='hidden' name='_csrf' value=csrfToken)
      +field('Edit question', 'value', question.value, 'text', 'Question...')
      div.buttons
        button(type='submit') Update question
        a(href=`/`) Cancel
