extends layout.pug

include utils.pug

append head
    link(rel="stylesheet" href="/stylesheets/forms.css")
    link(rel="stylesheet" href="/stylesheets/error.css")

block content
    +validationErrorSummary(errors)
    form(action='/users/register' method='post')
        div#logo
            img(src="/images/query-logo.svg")
        input(type='hidden' name='_csrf' value=csrfToken)
        +field('Create Account', 'firstName', user.firstName, 'text', 'First Name')
        +field(null, 'lastName', user.lastName, 'text', 'Last Name')
        +field(null, 'email', user.email, 'email', 'Email')
        +field(null, 'password', user.password, 'password', 'Password')
        +field(null, 'confirmPassword', '', 'password', 'Confirm Password')
        div.buttons
            button(type='submit' id="register" ) Register
            a(href='/' ) Cancel
    div(id='existing-user')
        p: a(href='/users/login') Already have an account?
    div(id='photo-credit')
        <span>Photo by <a href="https://unsplash.com/@efekurnaz?utm_source=unsplash&amp;utm_medium=referral&amp;utm_content=creditCopyText" target="_blank">Efe Kurnaz</a> on <a href="https://unsplash.com/wallpapers/colors/neon?utm_source=unsplash&amp;utm_medium=referral&amp;utm_content=creditCopyText" target="_blank">Unsplash</a></span>