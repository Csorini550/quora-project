
doctype html
html
  head
    <script src="https://kit.fontawesome.com/6e38a041a3.js" crossorigin="anonymous"></script>
    script(src="/javascripts/index.js")
    title="Query"
    link(rel='stylesheet' href='/stylesheets/navbar.css')
    block head
  body
    nav(class='nav')
      img(src="https://upload.wikimedia.org/wikipedia/commons/b/b9/Kevin_Federline.jpg" class='navbar-logo')
      a(href='/')
        i(class="fas fa-home")
      a(href='/users/question') 
        i(class="far fa-question-circle")
      a(href='/users/answer')
        i(class="fas fa-book")
      form(id='search-bar')
        input.search-input(type='text' name='term' placeholder='Search for a question!')
      div(class= 'dropdown')
        button(onclick='myFunction()' class='dropButton')
        div(id="myDropdown" class="dropdown-content")

    block content